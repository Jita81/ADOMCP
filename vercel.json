{
  "version": 2,
  "name": "azure-devops-multiplatform-mcp",
  "builds": [
    {
      "src": "api/mcp-server.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/health.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/api/mcp",
      "dest": "/api/mcp-server.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/mcp-server.py"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_ANON_KEY": "@supabase_anon_key",
    "SUPABASE_SERVICE_KEY": "@supabase_service_key",
    "MCP_SERVER_NAME": "Azure DevOps Multi-Platform MCP",
    "MCP_SERVER_VERSION": "2.1.0"
  },
  "functions": {
    "api/mcp-server.py": {
      "maxDuration": 30
    }
  }
}
